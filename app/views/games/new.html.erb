<div id= container>
  <div id= header>
    <h1>New Game!</h1>

   <h2><%= @letters%></h2>
  </div>

  <div id= bottom>
    <h3>What is the longest word you can find?</h3>
      <form action="/score" method="post" data-turbo="false">
        <input type="text" name="answer" value="<%= params[:answer] %>">
        <input type="submit" value="Play" class="btn btn-primary">
        <%= hidden_field_tag :letters, @letters %>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      </form>
  </div>
</div>
